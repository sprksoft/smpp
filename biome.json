{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",

  "files": {
    "includes": ["src/**/*"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "semicolons": "always",
      "trailingCommas": "all",
      "quoteStyle": "double"
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error"
      },
      "suspicious": {
        "noDocumentCookie": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noShorthandPropertyOverrides": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    }
  }
}
