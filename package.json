{
  "name": "smpp",
  "version": "1.0.0",
  "description": "Verbeter en personaliseer je Smartschool-ervaring met thema's, widgets, games en meer.",
  "homepage": "https://github.com/sprksoft/smpp#readme",
  "bugs": {
    "url": "https://github.com/sprksoft/smpp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sprksoft/smpp.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/index.ts src/background-scripts/index.ts --bundle --outdir=./extension \"--external:/includes/*\" \"--external:/smsc/*\"",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src --write",
    "check": "ultracite check",
    "check:fix": "biome check src --write",
    "typecheck": "tsc --noEmit",
    "ci": "biome check src",
    "prepare": "husky",
    "fix": "ultracite fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/colorthief": "^2.6.1",
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5"
  },
  "dependencies": {
    "browser-image-compression": "^2.0.2",
    "colord": "^2.9.3",
    "node-vibrant": "^4.0.4"
  }
}
